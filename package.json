{
  "name": "frozenbet-ext-api",
  "version": "1.0.0",
  "private": true,
  "description": "External mock API to simulate competitions, matches, and users for a sports betting backend.",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "lint": "echo 'no linter configured'",
    "build": "prisma generate && prisma db push && node prisma/seed.js",
    "postinstall": "prisma generate",
    "vercel-build": "prisma generate && prisma db push && node prisma/seed.js",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:migrate": "prisma migrate dev --name init",
    "db:seed": "node prisma/seed.js"
  },
  "dependencies": {
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "morgan": "^1.10.0",
    "@prisma/client": "^5.20.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "prisma": "^5.20.0"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
